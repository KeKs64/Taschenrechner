<UserControl
    x:Class="Taschenrechner.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Taschenrechner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="500"
    d:DesignWidth="450"
    Background="{DynamicResource ResourceKey=BackgroundBrush}"
    mc:Ignorable="d">
    <Grid>
        <Button
            Width="50"
            Height="20"
            Margin="379,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding NavigateToTRCommand}"
            Content="Home" />

        <TextBox
            Width="95"
            Height="40"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderBrush="Transparent"
            FontSize="25"
            Foreground="{DynamicResource ResourceKey=ForegroundBrush}"
            IsReadOnly="True"
            Text="Settings" />
        <ToggleButton
            Width="60"
            Height="30"
            Margin="58,140,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding SwitchThemeCommand}"
            IsChecked="{Binding IsLightTheme, Mode=OneWay}">
            <ToggleButton.Template>
                <ControlTemplate>
                    <Border
                        x:Name="ToggleRand"
                        Width="58"
                        Height="30"
                        Background="White"
                        CornerRadius="15">
                        <Border
                            x:Name="ToggleKreis"
                            Width="22"
                            Height="22"
                            Margin="4,0,4,0"
                            HorizontalAlignment="Left"
                            Background="White"
                            CornerRadius="15">
                            <Border.Effect>
                                <DropShadowEffect Opacity=".2" />
                            </Border.Effect>
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="ToggleButton.IsChecked" Value="False">
                            <Setter TargetName="ToggleKreis" Property="HorizontalAlignment" Value="Right" />
                            <Setter TargetName="ToggleKreis" Property="Background" Value="#4cd649" />
                        </Trigger>

                        <Trigger Property="ToggleButton.IsChecked" Value="True">
                            <Setter TargetName="ToggleRand" Property="Background" Value="LightGray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ToggleButton.Template>
        </ToggleButton>
        <TextBox
            Width="212"
            Height="40"
            Margin="192,135,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{DynamicResource ResourceKey=BackgroundBrush}"
            BorderBrush="{DynamicResource ResourceKey=BackgroundBrush}"
            FontSize="27"
            Foreground="{DynamicResource ResourceKey=ForegroundBrush}"
            IsReadOnly="True"
            Text="Light/DarkMode" />

    </Grid>
</UserControl>
